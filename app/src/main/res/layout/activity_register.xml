<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".merchant.ui.auth.RegisterActivity">

    <include
        android:id="@+id/include20"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_light"
                android:text="We take safety seriously. To provide you with the best possible support.We need your Email Address and trade Name."
                android:textAlignment="textStart"
                android:textColor="@color/text2"
                android:textSize="@dimen/text_12"
                app:layout_constraintEnd_toStartOf="@+id/guideline26"
                app:layout_constraintStart_toStartOf="@+id/guideline25"
                app:layout_constraintTop_toBottomOf="@+id/include19" />


            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_rectangle"
                android:fontFamily="@font/nexa_light"
                android:hint="Enter Trade Name"
                android:inputType="text"
                android:padding="@dimen/dimen_18"
                android:textColor="@color/text2"
                android:textSize="@dimen/text_15" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_rectangle"
                android:fontFamily="@font/nexa_light"
                android:hint="Enter Email Id"
                android:inputType="text"
                android:padding="@dimen/dimen_18"
                android:textColor="@color/text2"
                android:textSize="@dimen/text_15" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_rectangle"
                android:fontFamily="@font/nexa_light"
                android:hint="Enter Password"
                android:inputType="text"
                android:padding="@dimen/dimen_18"
                android:textColor="@color/text2"
                android:textSize="@dimen/text_15" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_rectangle"
                android:fontFamily="@font/nexa_light"
                android:hint="Enter Your location"
                android:inputType="text"
                android:padding="@dimen/dimen_18"
                android:textColor="@color/text2"
                android:textSize="@dimen/text_15" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/border_rectangle"
                    android:fontFamily="@font/nexa_light"
                    android:hint="Upload Trade License"
                    android:inputType="text"
                    android:padding="@dimen/dimen_18"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_15" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center">

                    <View
                        android:layout_width="@dimen/dimen_1"
                        android:layout_height="fill_parent"
                        android:background="#DEDEDE" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/nexa_light"
                        android:hint="Browse"
                        android:inputType="text"
                        android:padding="@dimen/dimen_18"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_15" />
                </LinearLayout>
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_60"
                android:layout_marginBottom="20dp"
                android:enabled="true"
                android:fontFamily="@font/nexa_bold"
                android:paddingLeft="@dimen/dimen_30"
                android:paddingTop="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_30"
                android:paddingBottom="@dimen/dimen_15"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>