<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10"
    android:layout_marginBottom="@dimen/dimen_10"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_5"
    app:cardElevation="@dimen/dimen_5"
    app:cardMaxElevation="@dimen/dimen_5"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_offer_background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_offer_background"
                android:padding="@dimen/dimen_20">

                <ImageView
                    android:id="@+id/iv_battery"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="@dimen/dimen_70"
                    android:src="@drawable/battery_replacement" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_toLeftOf="@+id/lin_offer"
                    android:layout_toRightOf="@+id/iv_battery"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:padding="@dimen/dimen_5"
                        android:text="Battery Replacement"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_light"
                        android:padding="@dimen/dimen_5"
                        android:text="Actual Price:250 AED"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_light"
                        android:padding="@dimen/dimen_5"
                        android:text="Discount Price:250 AED"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_light"
                        android:padding="@dimen/dimen_5"
                        android:text="Pending"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nexa_bold"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5"
                        android:text="30%"
                        android:textColor="@color/yellow_200"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_light"
                        android:padding="@dimen/dimen_5"
                        android:text="DISCOUNT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>


            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:fontFamily="@font/nexa_light"
                android:text="Valid until 23 Jun 2021"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/border_btn"
                    android:enabled="true"
                    android:paddingStart="@dimen/dimen_5"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingEnd="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_5"
                    android:shadowRadius="10"
                    android:src="@drawable/ic_delete"
                    app:cornerRadius="10dp"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/border_btn"
                    android:enabled="true"
                    android:paddingStart="@dimen/dimen_5"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingEnd="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_5"
                    android:shadowRadius="10"
                    android:src="@drawable/ic_edit"
                    app:cornerRadius="10dp"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/iv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/border_btn"
                    android:enabled="true"
                    android:paddingStart="@dimen/dimen_5"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingEnd="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_5"
                    android:shadowRadius="10"
                    android:src="@drawable/ic_baseline_eye"
                    app:cornerRadius="10dp"
                    app:tint="@color/black" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>