<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_15"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_prduct_img"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:src="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_toRightOf="@+id/iv_prduct_img"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/nexa_light"
                    android:padding="@dimen/dimen_5"
                    android:text="GOMECHANIC"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/nexa_bold"
                    android:padding="@dimen/dimen_5"
                    android:text="400 AED"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_bold"
                android:padding="@dimen/dimen_5"
                android:text="RACEMAX 4T 20W40 \n(0.9L)"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/nexa_light"
                    android:padding="@dimen/dimen_5"
                    android:text="Coolant"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12" />


                <LinearLayout
                    android:id="@+id/lin_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_rectangle_black"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_2"
                        android:paddingRight="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_2"
                        android:text="-"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_15" />

                    <TextView
                        android:id="@+id/tv_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_2"
                        android:paddingRight="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_2"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/tv_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_2"
                        android:paddingRight="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_2"
                        android:text="+"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_15" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>