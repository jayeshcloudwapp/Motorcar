<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nv_bottom_tab"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nv_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/color_tab"
        app:backgroundTint="@color/color_tab"
        app:itemIconTint="@drawable/selector_color"
        app:itemTextColor="@color/bottom_item_text"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation"
        android:backgroundTint="@color/black"/>
</RelativeLayout>