<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".merchant.ui.home.Fragment.HomeMerchantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70"
            app:cardBackgroundColor="@color/yellow_200"
            app:cardCornerRadius="@dimen/dimen_5"
            app:cardElevation="@dimen/dimen_10"
            app:cardMaxElevation="@dimen/dimen_10"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/iv_menu"
                    android:ellipsize="end"
                    android:fontFamily="@font/nexa_bold"
                    android:singleLine="true"
                    android:text="MotorCar | Find new Customer Online"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_notifications" />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15"
                    app:cardBackgroundColor="@color/yellow_200"
                    app:cardCornerRadius="@dimen/dimen_5"
                    app:cardElevation="@dimen/dimen_10"
                    app:cardMaxElevation="@dimen/dimen_10"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_20">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_welcome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:fontFamily="@font/nexa_bold"
                                android:text="Welcome Jhon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_welcome"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:fontFamily="@font/nexa_light"
                                android:text="2021-23-06"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:drawableLeft="@drawable/ic_star"
                                android:drawablePadding="@dimen/dimen_5"
                                android:drawableTint="@color/black"
                                android:fontFamily="@font/nexa_bold"
                                android:padding="@dimen/dimen_05"
                                android:text="4.5"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12"
                                app:layout_constraintStart_toStartOf="@+id/guideline17"
                                app:layout_constraintTop_toBottomOf="@+id/lable_main_service" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dimen_60"
                                android:layout_height="@dimen/dimen_60"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_preferred" />
                        </LinearLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <!--               shortcuts buttons starts-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcv_new_requet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#ACC1FF"
                            app:cardCornerRadius="@dimen/dimen_10"
                            app:cardMaxElevation="@dimen/dimen_5"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/dimen_5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_bold"
                                    android:padding="@dimen/dimen_5"
                                    android:text="20"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_welcome"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_light"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5"
                                    android:text="New Requests"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12" />
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcv_working"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#C7EEFF"
                            app:cardCornerRadius="@dimen/dimen_10"
                            app:cardMaxElevation="@dimen/dimen_5"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/dimen_5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_bold"
                                    android:padding="@dimen/dimen_5"
                                    android:text="3"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_welcome"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_light"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5"
                                    android:text="Working Requests"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12" />
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcv_complete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#FFAEAE"
                            app:cardCornerRadius="@dimen/dimen_10"
                            app:cardMaxElevation="@dimen/dimen_5"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/dimen_5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_bold"
                                    android:padding="@dimen/dimen_5"
                                    android:text="20"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_welcome"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_light"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5"
                                    android:text="Completed Requests"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12" />
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcv_offer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#FFEC94"
                            app:cardCornerRadius="@dimen/dimen_10"
                            app:cardMaxElevation="@dimen/dimen_5"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/dimen_5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_bold"
                                    android:padding="@dimen/dimen_5"
                                    android:text="6"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_welcome"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_light"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5"
                                    android:text="Offers Limits"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12" />
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#B0E57C"
                            app:cardCornerRadius="@dimen/dimen_10"
                            app:cardMaxElevation="@dimen/dimen_5"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/dimen_5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_bold"
                                    android:padding="@dimen/dimen_5"
                                    android:text="3"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/tv_welcome"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_light"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5"
                                    android:text="Quotes Limits"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12" />
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcv_package"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#FFD225"
                            app:cardCornerRadius="@dimen/dimen_10"
                            app:cardMaxElevation="@dimen/dimen_5"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/dimen_5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_bold"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5"
                                    android:text="Gold Monthly Plan"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_welcome"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nexa_light"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5"
                                    android:text="30 Days Left"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12" />
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
                <!--                Shortcuts buttons end-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nexa_bold"
                        android:padding="@dimen/dimen_10"
                        android:text="New Requests"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_request"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</FrameLayout>